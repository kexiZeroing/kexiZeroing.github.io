---
import { Image } from "astro:assets";
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props as Props;
const isActive = Astro.url.pathname === href || Astro.url.pathname === `${href}/`;
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
	<slot />
	{ props.target && props.target === "_blank" &&
		<Image src="/external-link.svg" alt="external link" width={18} height={18} class="link-icon" />
	}
</a>

<!-- Notes: 
1. Styling here is scoped to this component.
2. You can also use <style lang="scss"> after `npm i -D sass`.
-->
<style>
	a {
		display: inline-block;
		text-decoration: none;
		font-size: 18px;
		color: var(--blue);
		font-weight: 500;
		padding-bottom: 2px; /* Added padding */
		border-bottom: 2px solid transparent; /* Add transparent border for spacing */
		transition: color 0.2s ease-in-out, border-color 0.2s ease-in-out; /* Added transition */
	}
	a.active, a:hover {
		font-weight: bold;
		/* font-style: italic; (removed) */
		/* text-decoration: underline; (removed) */
		border-bottom: 2px solid var(--blue); /* Changed from text-decoration */
		color: var(--blue); /* Explicitly set color */
	}
	.link-icon {
		margin-left: -4px;
		vertical-align: baseline;
	}
</style>
